{% block datalist_widget %}
<div class="panel-block">
    <div class="field is-flex-grow-5">
        <p class="control has-icons-left">
            <label class="label" for="html-product-choice">Choisissez un
                produit *</label>
            <input class="input select" list="products" id="html-product-choice"
                name="product-choice" placeholder="Search" required />

            <datalist id="products">
                {% for choice in choices %}

                <option value="{{ choice.getId() }} - {{ choice.getName() }}" />
                {% endfor %}

            </datalist>
        </p>
    </div>
</div>
{% endblock %}